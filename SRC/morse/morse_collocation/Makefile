#==============================================================================#
FC=gfortran
FFLAGS=-O3
#FFLAGS= -g -O0 -Wall -Wextra -pedantic -fcheck=all -fbacktrace
#==============================================================================#
all: two_grids
#==============================================================================#
#                       Compile all Fortran Files
#==============================================================================#
%.o: %.f90
	$(FC) $(FFLAGS) -o $@ -c $^
#==============================================================================#
#                               DGB Cluster
#==============================================================================#
two_grids: morse_collocation_two_grids.o
	$(FC) -o $@ $^ -llapack
#==============================================================================#
clean:
	rm -rf *.o *.mod two_grids
